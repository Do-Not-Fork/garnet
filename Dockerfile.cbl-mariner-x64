# build the application using CBL-Mariner 2.0
FROM mcr.microsoft.com/dotnet/sdk:8.0-cbl-mariner2.0 AS build
WORKDIR /source

# Copy files
COPY . .
WORKDIR /source/main/GarnetServer

RUN dotnet restore
RUN dotnet build -c Release

# copy and publish app and libraries
RUN dotnet publish -c Release -o /app -r linux-x64 --self-contained false --no-restore -f net8.0

# final stage/image
FROM mcr.microsoft.com/dotnet/runtime-deps:8.0-cbl-mariner2.0 AS runtime

WORKDIR /app
COPY --from=build /app .

# For inter-container communication.
EXPOSE 6379

# Run GarnetServer with an index size of 128MB
ENTRYPOINT ["/app/GarnetServer.exe", "-i", "128m", "--port", "6379"]